<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_signup_scroll" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_gravity="center"
    android:fillViewport="true"
    >

<RelativeLayout
    android:orientation="vertical" android:padding="0dip"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:id="@+id/fragment_login">
    
    <ImageView 
        android:id="@+id/fragment_login_logo" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="logo"
        android:layout_alignParentTop="true"
        />

   <EditText
        android:id="@+id/fragment_login_email_address" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textEmailAddress"
        android:hint="@string/email_address"
        android:layout_below="@+id/fragment_login_logo"
        />
   
   <EditText
        android:id="@+id/fragment_login_password" 
    	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:layout_below="@+id/fragment_login_email_address"
        />
   
   
        
  <TextView 
        android:id="@+id/fragment_login_login_do_not_have_account"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
		android:lines="1"
		android:textColor="#FF916B4A"
		android:clickable="true"
		android:text="@string/sign_up"
		android:layout_below="@+id/fragment_login_password"
		android:layout_alignParentRight="true"
        />


	<TextView
		android:id="@+id/fragment_login_login_forgot_password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/fragment_login_password"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="16dp"
		android:clickable="true"
		android:lines="1"
		android:text="@string/forgot_password"
		android:textColor="#FF916B4A"
		android:textSize="16sp"
		android:visibility="visible" />
    
   <Button
        android:id="@+id/fragment_login_login"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/log_in"
        android:textColor="#FF916B4A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/white_gray_gradient"
        android:layout_below="@+id/fragment_login_login_forgot_password"
        />

      
</RelativeLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_home_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/treetracker_logo" />

    <TextView
        android:id="@+id/fragment_home_welcome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_thirty"
        android:layout_below="@+id/fragment_home_logo"
        android:layout_marginLeft="@dimen/margin_twenty_four"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_twenty_four"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size" />

    <Button
        android:id="@+id/fragment_home_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_home_welcome"
        android:layout_marginLeft="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_twenty_five"
        android:background="@drawable/white_gray_gradient"
        android:paddingTop="@dimen/margin_eight"
        android:paddingBottom="@dimen/margin_eight"
        android:text="@string/map"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fragment_home_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_home_map"
        android:layout_marginLeft="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_twenty_five"
        android:background="@drawable/white_gray_gradient"
        android:paddingTop="@dimen/margin_eight"
        android:paddingBottom="@dimen/margin_eight"
        android:text="@string/data"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fragment_home_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_home_data"
        android:layout_marginLeft="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_twenty_five"
        android:background="@drawable/white_gray_gradient"
        android:paddingTop="@dimen/margin_eight"
        android:paddingBottom="@dimen/margin_eight"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fragment_home_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_home_settings"
        android:layout_marginLeft="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_twenty_five"
        android:background="@drawable/white_gray_gradient"
        android:paddingTop="@dimen/margin_eight"
        android:paddingBottom="@dimen/margin_eight"
        android:text="@string/exit"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold" />

</RelativeLayout>

